{
  "$schema": "https://deno.land/x/denon@2.4.7/schema.json",
  "allow": { "net": true, "env": true, "read": "./db/" },
  "scripts": {
    "start": {
      "cmd": "server.ts",
      "desc": "Run the main server"
    }
  },
  "watcher": {
    "interval": 350,
    "exts": ["ts", "json"],
    "match": ["*.*"],
    "skip": ["*/.git/*", "./db/*"]
  }
}
